      function updateTours() {
        const queryParams = new URLSearchParams();
        // Lấy các giá trị từ các bộ lọc và thêm vào queryParams

        // change
        const type = document.getElementById('type').value;
        const category = document.getElementById('categoryFilter').value;
        const departure = document.getElementById('departureFilter').value;
        const destination = document.getElementById('destinationFilter').value;
        const startDate = document.getElementById('startDateFilter').value;
        const minPrice = document.getElementById('min-range').value;
        const maxPrice = document.getElementById('max-range').value;

        // click
        const amountDate = document.querySelector('button[name="AmountDate"].active').value;
        const amountPerson = document.querySelector('button[name="AmountPerson"].active').value;
        const promotion = document.querySelector('input[name="Promotion"]').checked;
        const remainPax = document.querySelector('input[name="RemainPax"]').checked;
        const sort = document.getElementById('sortFilter').value;


        if (type) queryParams.append('type', type);
        if (category) queryParams.append('category', category);
        if (departure) queryParams.append('departure', departure);
        if (destination) queryParams.append('destination', destination);
        if (startDate) queryParams.append('startDate', startDate);
        if (amountDate) queryParams.append('amountDate', amountDate);
        if (amountPerson) queryParams.append('amountPerson', amountPerson);
        queryParams.append('rangeprice', `${minPrice}-${maxPrice}`);
        if (promotion) queryParams.append('promotion', promotion);
        if (remainPax) queryParams.append('remainPax', remainPax);
        if (sort) queryParams.append('sort', sort);

