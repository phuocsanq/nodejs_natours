        slider.value = autoNumericInstance.getNumber();
      }

      function handleSliderChange(event) {
        const slider = event.target;
        if (slider === minRange) {
          updateInputFromSlider(minRange, minAutoNumeric);
        } else {
          updateInputFromSlider(maxRange, maxAutoNumeric);
        }
      }

      minRange.addEventListener("input", handleSliderChange);
      minRange.addEventListener("change", handleSliderChange);
      maxRange.addEventListener("input", handleSliderChange);
      maxRange.addEventListener("change", handleSliderChange);

