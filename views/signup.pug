extends base

block content
  main.main
    .singup-form
      h2.heading-secondary.ma-bt-lg Đăng ký tài khoản
      form.form.form--signup
        .form__group
          label.form__label(for='name') Tên
          input#name.form__input(type='text' placeholder='' required='')
        .form__group
          label.form__label(for='email') Email
          input#email.form__input(type='email'   placeholder='you@example.com' required='')
        .form__group.ma-bt-md
          label.form__label(for='password') Mật khẩu
            input#password.form__input(type='password' placeholder='••••••••' required='' minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Xác nhận mật khẩu
            input#passwordConfirm.form__input(type='password' placeholder='••••••••' required='' minlength='8')
        .form__group
          button.my-btn.btn--green Đăng ký