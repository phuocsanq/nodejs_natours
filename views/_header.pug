header.header
  nav.nav.nav--tours
    - if(user)
      - if(user.role === 'admin')
        .header__logo
          a(href='/admin/tour')
            img(style='height: 60px' src='/img/my-logo.png' alt='Natours logo')
        //- a.nav__el(href='/admin') Admin
      - else
        .header__logo
          a(href='/')
            img(style='height: 60px' src='/img/my-logo.png' alt='Natours logo')
        //- a.nav__el(href='/') All tours
    - else
      .header__logo
        a(href='/')
          img(style='height: 70px' src='/img/my-logo.png' alt='Natours logo')
      //- a.nav__el(href='/') All tours

  nav.nav.nav--user
    if user
      a.nav__el(href='/my-settings')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Đăng nhập
      a.nav__el.nav__el--cta(href='/signup') Đăng ký
